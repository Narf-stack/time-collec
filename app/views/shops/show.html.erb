<div class="container mt-4">
  <%= link_to "◁ Accueil", root_path, :class=>'back-home' %>
  <div class="shop-profil d-flex">
    <div class='row'>
      <div class='col-sm-12  col-md-12 col-lg-3 h-100' >
        <%= render partial: "shops/partial/show/shop_id_pics"%>
      </div>
      <div class='col-sm-12  col-md-12 col-lg-9 h-100' >
        <%= render partial: "shops/partial/show/shop_info", locals:{shop: @shop, business_hours:@business_hours, days_ordered:@days_ordered}%>
      </div>
    </div>
  </div>

  <div id='friend-group'>
    <div id='div-make-friend'>
      <p id='new-friend-btn'>New Friend</p>
      <div id='div-new-friend' data-slug='<%= @shop.slug  %>'></div>
    </div>
    <div id='div-all-friends'>
      <%= render partial:'shops/partial/show/contact_uniq', collection: @friends, as: :contact, locals: {type: 'friend'}%>
    </div>
  </div>

  <div id='emergency-group'>
    <div id='div-make-emergency'>
      <p id='new-emergency-btn'>New Emergency</p>
      <div id='div-new-emergency' data-slug='<%= @shop.slug  %>'></div>
    </div>
    <div id='div-all-emergency'>
      <%= render partial:'shops/partial/show/contact_uniq', collection: @emergencies, as: :contact, locals: {type: 'emergency'}%>
    </div>
  </div>
</div>